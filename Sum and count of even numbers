#include<stdio.h>
#include<conio.h>
#include<math.h>

int main(){

    int i;
    int evencount = 0;
    int evensum = 0;

    for(i = 1;i <= 1000; i++){
        if(i%2 == 0){
            printf("\n even %d", i);
            evencount++;

            evensum = evensum + i;
    }
    }

    printf("\nThe number of even numbers are : %d", evencount);
    printf("\nThe Sum of even numbers is : %d", evensum);

    return 0;
}
